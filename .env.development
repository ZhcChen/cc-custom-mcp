# 开发环境配置
MCP_DEV_MODE=true
MCP_LOG_LEVEL=debug
MCP_PORT=3001
MCP_HOST=localhost

# 开发模式下的额外工具
MCP_ENABLE_DEBUG_TOOLS=true
MCP_ENABLE_HOT_RELOAD=true

# 开发数据库/存储路径
MCP_DATA_DIR=./dev-data
MCP_FEEDBACK_DIR=./dev-data/feedback

# 开发模式下的安全设置（更宽松）
MCP_AUTO_APPROVE_ALL=false
MCP_REQUIRE_CONFIRMATION=true
